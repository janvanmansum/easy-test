#!/usr/bin/env bash

BINPATH=`readlink -f $0`
APPHOME=`dirname \`dirname $BINPATH \``
MODULE=`basename $APPHOME`
LOGBACK_CFG=/etc/opt/dans.knaw.nl/$MODULE/logback.xml

if [ ! -f $LOGBACK_CFG ]; then
    LOGBACK_CFG=$APPHOME/cfg/logback.xml
fi

java -Dlogback.configurationFile=$LOGBACK_CFG \
     -Dapp.home=$APPHOME \
     -jar $APPHOME/bin/easy-test.jar $@
